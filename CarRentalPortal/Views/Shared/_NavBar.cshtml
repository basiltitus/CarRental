@using Microsoft.AspNetCore.Http;
<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid nav-container">
        <a class="navbar-brand brandName" asp-action="UserPortal">Drive Way</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-action="DateSelector">Rent a car</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="OrderHistory">Order History</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right ml-auto">
                <li class="nav-item">
                    <a class="nav-link">Welcome @Context.Session.GetString("_userName")</a>
                </li>
                <li class="nav-item">
                    @if (Context.Session.GetString("_avatarUrl") != "0")
                    {

                        <a asp-action="UserProfile" asp-controller="Home" class="nav-link"><img src="@Context.Session.GetString("_avatarUrl")" alt="Avatar" class="avatar"></a>
                    }
                    else
                    {
                        <a asp-action="UserProfile" asp-controller="Home" class="nav-link"><img src="https://www.dcrc.co/wp-content/uploads/2019/04/blank-head-profile-pic-for-a-man.jpg" alt="Avatar" class="avatar"></a>
                    }
                </li>
                <li class="nav-item">
                    <button type="button" class="btn btn-danger right-btn nav-link" onclick="location.href='@Url.Action("Logout", "home")';return false;"><i class="fas fa-sign-out-alt"></i> Logout</button>
                </li>
            </ul>
        </div>
    </div>
</nav>