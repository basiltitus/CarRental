@model CarRentalPortal.Models.ViewModels.CarListVM

<div>
    <partial name="_AdminNavBar" />
</div>
<div class="row p-4">
    <div class="col-4 text-center offset-4">
        <h3>View Car</h3>
    </div>
    <div class="col-3 text-right">
        <a asp-action="CarList" asp-controller="home" class="btn btn-primary">Back to list</a>
    </div>
</div>

<div class="carDetailsDiv container">
    <img src='@ViewBag.ImgUrl' class="list-img" />
    @Html.LabelFor(model => model.CarModelDetails.CarName, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.CarModelDetails.CarName)

    @Html.LabelFor(model => model.CarModelDetails.CarTransmission, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.CarModelDetails.CarTransmission)

    @Html.LabelFor(model => model.CarModelDetails.CarType, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.CarModelDetails.CarType)

    @Html.LabelFor(model => model.CarModelDetails.SeatCount, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.CarModelDetails.SeatCount)

    @Html.LabelFor(model => model.CarModelDetails.ChargePerDay, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.CarModelDetails.ChargePerDay)

    @Html.LabelFor(model => model.CreatedOn, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.CreatedOn)

    <span class="carLabel">Created By</span>
    @Html.DisplayFor(model => model.UserDetails.Name)

    @Html.LabelFor(model => model.RegNo, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.RegNo)

    @Html.LabelFor(model => model.Colour, new { @class = "carLabel" })
    @Html.DisplayFor(model => model.Colour)
</div>