@using Microsoft.AspNetCore.Http;
@model IEnumerable<CarRentalPortal.Models.ViewModels.CarListVM>
<div>
    <partial name="_AdminNavBar" />
</div>

<div class="row p-4">
    <div class="col-4 text-center offset-4">
        <h3>Car List</h3>
    </div>
    <div class="col-3 text-right">
        <a asp-action="CreateCar" asp-controller="home" class="btn btn-primary">Add a cart</a>
    </div>
</div>
<div class="row">
    <div class="col-2">

    </div>
    <div class="col-10">

        <div class="container">
            <div class="p-4 border">

                @foreach (var item in Model)
                {
                    <div class="container p-3 border">
                        <div class="row">
                            <div class="col-2">
                                <img src='@item.ImgUrl' class="list-img" />
                            </div>
                            <div class="col-6">
                                <div class="row">
                                    <div class="col-4">
                                        <h4 class="font-weight-bold">@item.CarModelDetails.CarName</h4>
                                    </div>
                                    <div class="col-2">
                                        <b>Reg No : </b>@item.RegNo
                                    </div>
                                    <div class="col-1">
                                        <a class="btn btn-secondary" asp-action="ViewCar" asp-controller="home"><i class="fas fa-eye"></i></a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2">
                                        <b>Colour : @item.Colour </b>
                                    </div>
                                    <div class="col-2">
                                        <b>Transmission : </b>@item.CarModelDetails.CarTransmission
                                    </div>
                                    <div class="col-2">
                                        <b>Car Type : </b>@item.CarModelDetails.CarType
                                    </div>
                                    @if (Context.Session.GetInt32("_userId") == item.UserId)
                                    {
                                        <div class="col-1">
                                            <a class="btn btn-primary" asp-action="EditCar" asp-controller="home"><i class="fas fa-edit"></i></a>
                                        </div>
                                    }
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <b>Seat Count : </b>@item.CarModelDetails.SeatCount
                                    </div>
                                    <div class="col-2">
                                        <b>Charge Per Day : </b>@item.CarModelDetails.ChargePerDay
                                    </div>
                                    @if (Context.Session.GetInt32("_userId") == item.UserId)
                                    {
                                        <div class="col-1">
                                            <a class="btn btn-danger" asp-action="DeleteCar" asp-controller="home"><i class="fas fa-trash-alt"></i></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="p-4 border">

        @foreach (var item in Model)
        {
            <div class="container p-3 border">
                <div class="row">
                    <div class="col-2">
                        <img src='@item.ImgUrl' class="list-img" />
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4">
                                <h4 class="font-weight-bold">@item.CarModelDetails.CarName</h4>
                            </div>
                            <div class="col-2">
                                <b>Reg No : </b>@item.RegNo
                            </div>
                            <div class="col-1">
                                <a class="btn btn-secondary" asp-action="ViewCar" asp-controller="home"><i class="fas fa-eye"></i></a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">
                                <b>Colour : @item.Colour </b>
                            </div>
                            <div class="col-2">
                                <b>Transmission : </b>@item.CarModelDetails.CarTransmission
                            </div>
                            <div class="col-2">
                                <b>Car Type : </b>@item.CarModelDetails.CarType
                            </div>
                            @if (Context.Session.GetInt32("_userId") == item.UserId)
                            {
                                <div class="col-1">
                                    <a class="btn btn-primary" asp-action="EditCar" asp-controller="home"><i class="fas fa-edit"></i></a>
                                </div>
                            }
                            </div>
                        <div class="row">
                            <div class="col-4">
                                <b>Seat Count : </b>@item.CarModelDetails.SeatCount
                            </div>
                            <div class="col-2">
                                <b>Charge Per Day : </b>@item.CarModelDetails.ChargePerDay
                            </div>
                            @if (Context.Session.GetInt32("_userId") == item.UserId)
                            {
                                <div class="col-1">
                                    <a class="btn btn-danger" asp-action="DeleteCar" asp-controller="home"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            }
                            </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
