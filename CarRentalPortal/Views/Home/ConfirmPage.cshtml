@model CarRentalPortal.Models.ViewModels.CarListVM
<div>
    <partial name="_NavBar" />
</div>
<div class="row p-4">
    <div class="col-4 text-center offset-4">
        <h3>Confirm Order</h3>
    </div>
    <div class="col-3 text-right">
        <a asp-action="DateSelector" asp-controller="home" class="btn btn-primary">Retry</a>
    </div>
</div>
<div class="carDetailsDiv container">
    <label class="control-label carLabel">From Date</label>
    @ViewBag.FromDate

    <label class="control-label carLabel">To Date</label>
    @ViewBag.ToDate

    <label class="control-label carLabel">Number of days rented for</label>
    @ViewBag.NoOfDays


    <label class="control-label carLabel">Car Name</label>
    @Html.DisplayFor(model => model.CarModelDetails.CarName)

    <label class="control-label carLabel">Car Transmission type</label>
    @Html.DisplayFor(model => model.CarModelDetails.CarTransmission)

    <label class="control-label carLabel">Car Varient</label>
    @Html.DisplayFor(model => model.CarModelDetails.CarType)

    <label class="control-label carLabel">Car Colour</label>
    @Html.DisplayFor(model => model.Colour)

    <label class="control-label carLabel">Number of Seats</label>
    @Html.DisplayFor(model => model.CarModelDetails.SeatCount)

    <label class="control-label carLabel">Charge Per Day</label>
    @Html.DisplayFor(model => model.CarModelDetails.ChargePerDay)

    <label class="control-label carLabel">Total Charge</label>
    @ViewBag.Total

    <a asp-controller="home" asp-action="ConfirmPageYes" asp-route-id="@ViewBag.CarId" class="btn btn-primary" > Confirm </a>
</div>