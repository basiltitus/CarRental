@model IEnumerable<CarRentalPortal.Models.ViewModels.AdminRequestVM>
<div>
    <partial name="_AdminNavBar" />
</div>

<div class="row p-4">
    <div class="col-4 text-center offset-4">
        <h3>Pending Requests </h3>
    </div>
    <div class="col-3 text-right">
        <a asp-action="AdminPortal" asp-controller="Home" class="btn btn-primary"><i class="fas fa-sync"></i></a>
        <a asp-action="RequestHistory" asp-controller="Home" class="btn btn-secondary"><i class="fas fa-list-alt"></i> Request History</a>
    </div>
</div>
@if (Model.Count() == 0)
{


    <h5 class="p-5">No pending requests</h5>
}
else
{
    <div class="row">
        <div class="maxWidth col-10 offset-1 p-3 border">
            @foreach (var item in Model)
            {
                <div class="border p-1">
                    <div class="row p-4">
                        <div class="col-1 border-right text-center">
                            <img src="@item.ImgUrl" class="list-img border50" />
                        </div>
                        <div class="col-6 offset-1">
                            <div class="row">
                                <div class="col-5  ">
                                    <h3> @item.Name</h3>
                                </div>
                                <div class="col-4">
                                    <b> Order Id : </b>@item.OrderId
                                </div>
                            </div>
                            <div class="row p-3">
                                <div class="col-3">
                                    <b> Car Reg No : </b>@item.RegNo
                                </div>
                                <div class="col-2">
                                    <b> Car Name : </b>@item.CarName
                                </div>
                                <div class="col-2">
                                    <a asp-action="RequestDetail" asp-controller="home" asp-route-id="@item.OrderId" class="btn btn-primary"><i class="fas fa-search-plus"></i> Check Request</a>
                                </div>
                            </div>
                        </div>
                        
                            
                        
                    </div>
                </div>
            
        }
        </div>
</div>
        }

