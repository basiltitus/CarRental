@model Coupon

<div>
    <partial name="_AdminNavBar" />
</div>

<div class="row p-4">
    <div class="col-4 text-center offset-4">
        <h3>Edit Coupon</h3>
    </div>
    <div class="col-3 text-right">
        <a asp-action="CouponsList" asp-controller="home" class="btn btn-primary"><i class="fas fa-hand-point-left"></i> Back to list</a>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="carDetailsDiv container">
        <form asp-action="EditCoupon" method="post">
            <input type="hidden" name="CouponId" value="@Model.CouponId" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(model => model.CouponName, new { @class = "carLabel" })
            @Html.EditorFor(model => model.CouponName, new { htmlAttributes = new { placeholder = "Name of the car", @class = "form-control formInput" } })
            @Html.ValidationMessageFor(model => model.CouponName, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.MinOrderAmount, new { @class = "carLabel" })
            @Html.EditorFor(model => model.MinOrderAmount, new { htmlAttributes = new { placeholder = "Name of the car", @class = "form-control formInput" } })
            @Html.ValidationMessageFor(model => model.MinOrderAmount, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.PercentageDiscount, new { @class = "carLabel" })
            @Html.EditorFor(model => model.PercentageDiscount, new { htmlAttributes = new { placeholder = "Name of the car", @class = "form-control formInput" } })
            @Html.ValidationMessageFor(model => model.PercentageDiscount, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.MaxDiscount, new { @class = "carLabel" })
            @Html.EditorFor(model => model.MaxDiscount, new { htmlAttributes = new { placeholder = "Seat Count", @class = "form-control formInput", @type = "number" } })
            @Html.ValidationMessageFor(model => model.MaxDiscount, "", new { @class = "text-danger" })

            <br />

            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary formSubmit" type="submit" id="btn-one">Update</button>
            </div>
        </form>
    </div>

}